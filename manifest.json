{
	"name": "directSIDING",
	"version": "0.4",
	"description": "Log-in directo al SIDING desde Chrome",
	"manifest_version": 2,
	"icons": { 	"48": "i/icon_48.png",
				"128": "i/icon_128.png",
				"256": "i/icon_256.png"
				},
	"incognito": "split",
	"options_page": "options.html",
	"browser_action": {
			"default_icon": "i/icon.png",
			"default_title": "Entrar al SIDING",
			"default_popup": "index.html"
   			 },
	"permissions": [
		"https://*.ing.puc.cl/"
	]
   }

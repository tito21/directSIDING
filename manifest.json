{
	"name": "directSIDING",
	"version": "0.3.8",
	"description": "Log-in directo al SIDING desde Chrome",
	"icons": { 	"48": "i/icon_48.png",
				"128": "i/icon_128.png",
				"256": "i/icon_256.png"
				},
	"incognito": "split",
	"manifest_version": 2,
	"options_page": "options.html",
	"background" : {
			"page": "background.html"
			},
	"browser_action": {
			"default_icon": "i/icon.png",
			"default_title": "Entrar al SIDING",
			"default_popup": "index.html"
   			 },
   	"content_scripts": [
    	{
	      "matches": ["https://intrawww.ing.puc.cl/siding/*"],
	      "exclude_matches": ["https://intrawww.ing.puc.cl/siding/redireccion.php"],
	      "js": ["js/jquery-1.7.2.js", "js/siding.js"]
	    },
	    {
	    	"matches": ["https://intrawww.ing.puc.cl/siding/redireccion.php"],
	    	"js": ["js/redireccion.js"]
	    }
    ]
}
